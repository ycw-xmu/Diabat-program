## This is an example of the input file for diabat program.
## The symbol # represents comment.


# diabatization by FPHD method
$diabat-fphd

  # fchk and state files
  $$statepack

    fchkfile=  /data/home/lianman/ycwang/xxx-program/data/fphd/rasci/ab/singlet/act-4-2.in.fchk
    statefile=  /data/home/lianman/ycwang/xxx-program/data/fphd/rasci/ab/singlet/act-4-2.out
    state_id = 1~8  # Example format: 1, 2~5, 6~10

  $$

  # fragment definition
  $$frag
      num_frag = 2
      frag 1 = 1~30  # Example format: 1,2, 3~7, 8, 13~15
      frag 2 = 31~60
  $$


  #svdmin = 0.0001  # threshold in SVD for transition density matrix (default=1e-4)
  #density_cube = .false.  # print density cube files for diabatic states (default=.false.)
  #diabat_wfn = .false.  # print diabatic wavefunction (default=.false.)

  #refid = 1  # ID of reference state (required for QC methods other than TDDFT)
  #multiexcite = .true.  # turn on multi-excitation implementation (default=.false.)
  #extref = 3, 5  # multiple definition of external reference states (valid only for single-excitation implementation)

  #jacobi_thr = 1.0e-4  # threshold for Jacobi convergence (default=1e-8)
  #maxcycle = 0  # maximal Jacobi cycles
  #cyclestep = 1  # number of steps in a single Jacobi cycle
  #minamp = 0.0  # minimal amplitudes in reading and storing adiabatic state wfns

  #partition = hirshfeld  # partition scheme (only Lowdin is available currently)
  #method = rasci2_sparse  # user-assigned quantum chemical methods
  #prefix = pfix  # prefix of output files
  #outdir = out  # path of output directory
  #tmpdir = tmpdir/tmp1/tmp2/  # path of temporary file directory
  #tmpsave = .true.  # save temporary data or not (default=.false.)
  #restart = .false.
$

